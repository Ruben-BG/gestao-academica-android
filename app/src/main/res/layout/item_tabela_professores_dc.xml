<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textoNomeProfessorItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Nome do professor"
        android:textColor="@color/textoNormal"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textoTurmasItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turmas: 0"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textoNomeProfessorItem"
        app:layout_constraintTop_toBottomOf="@+id/textoNomeProfessorItem" />

    <View
        android:id="@+id/viewSeparadorItem"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/cinza_escuro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoTurmasItem" />

</androidx.constraintlayout.widget.ConstraintLayout>